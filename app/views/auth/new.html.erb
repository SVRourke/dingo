<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh">
        <div class="col-lg-3 col-md-4 col-sm-6 card">
        <div class="card-body">
        <h1 class="mb-2">Login</h1>
            <%= form_with do |f| %>
                <div class="form-group mt-2">
                    <%= f.label :username %>
                    <%= f.text_field :username, html_options: { class: "form-control" } %>
                </div>
                <div class="form-group mt-2">
                    <%= f.label :password %>
                    <%= f.text_field :password, html_options: { class: "form-control" } %>
                </div>
                <div class="form-group mt-3 mb-2">
                    <%= f.submit "Log In", class: "btn btn-primary" %>
                </div>

            <% end %>
        <%= link_to "sign up", new_user_path, class: "text-center" %>
        </div>
        </div>
    </div>
</div>
